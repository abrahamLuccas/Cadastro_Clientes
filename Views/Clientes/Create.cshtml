@model cadastro_clientes.Models.Cliente

@{
    ViewData["Title"] = "Criar Tarefa";
}
<h1>Cadastrar Clientes</h1>
<h4>Clientes</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
        <div asp-validation-summary="ModelOnly"class="text-danger"></div>
        
        <div  class="form-group"> <label asp-for="Name" class="control-label"></label> </div>
        
        <input asp-for="Name" class="form-control" /> 
        <span asp-validation-for="Name" class="text-danger"></span>
        
        <div  class="form-group"> <label asp-for="Telefone" class="control-label"></label> </div>
        <input asp-for="Telefone" class="form-control" /> 
        <span asp-validation-for="Telefone" class="text-danger"></span>

        <div  class="form-group"> <label asp-for="Email" class="control-label"></label> </div>
        <input asp-for="Email" class="form-control" /> 
        <span asp-validation-for="Email" class="text-danger"></span>
       
        <div  class="form-group"> <label asp-for="Pais" class="control-label"></label> </div>
        <input asp-for="Pais" class="form-control" /> 
        <span asp-validation-for="Pais" class="text-danger"></span>

        <div  class="form-group"> <label asp-for="UF" class="control-label"></label> </div>
        <input asp-for="UF" class="form-control" /> 
        <span asp-validation-for="UF" class="text-danger" maxlength=2></span>

        <div  class="form-group"> <label asp-for="Cidade" class="control-label"></label> </div>
        <input asp-for="Cidade" class="form-control" /> 
        <span asp-validation-for="Cidade" class="text-danger"></span>

        <div  class="form-group"> <label asp-for="Bairro" class="control-label"></label> </div>
        <input asp-for="Bairro" class="form-control" /> 
        <span asp-validation-for="Bairro" class="text-danger"></span>

        <div  class="form-group"> <label asp-for="Rua" class="control-label"></label> </div>
        <input asp-for="Rua" class="form-control" /> 
        <span asp-validation-for="Rua" class="text-danger"></span>

        <div  class="form-group"> <label asp-for="Numero" class="control-label"></label> </div>
        <input asp-for="Numero" class="form-control" /> 
        <span asp-validation-for="Numero" class="text-danger"></span>

        <div  class="form-group"> <label asp-for="Complemento" class="control-label"></label> </div>
        <input asp-for="Complemento" class="form-control" /> 
        <span asp-validation-for="Complemento" class="text-danger"></span>

        <div  class="form-group"> <label asp-for="Cep" class="control-label"></label> </div>
        <input asp-for="Cep" class="form-control" /> 
        <span asp-validation-for="Cep" class="text-danger"></span>

        <div class="form-group">
                <input type="submit" value="Inserir" class="btn btn-primary btn-sm" />
                <a class="btn btn-secondary text-white btn-sm" asp-action="Index">Voltar</a>
            </div>
    </form>
    </div>

</div>